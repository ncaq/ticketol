<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Concert</th>
      <th>Place</th>
      <th>Date</th>
      <th>Sell start</th>
      <th>Sell end</th>
      <th>Lottery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.concert %></td>
        <td><%= event.place %></td>
        <td><%= event.date %></td>
        <td><%= event.sell_start %></td>
        <td><%= event.sell_end %></td>
        <td><%= event.lottery %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

